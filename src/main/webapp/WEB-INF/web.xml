<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/applicationContext.xml
            /WEB-INF/db-config.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <filter>
        <filter-name>hibernateFilter</filter-name>
        <filter-class>
            org.springframework.orm.hibernate3.support.OpenSessionInViewFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/auction</url-pattern>
        <url-pattern>/auction/*</url-pattern>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>auctionServlet</servlet-name>
        <servlet-class>com.govauction.controller.AuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>auctionAdminServlet</servlet-name>
        <servlet-class>com.govauction.controller.AuctionAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auctionServlet</servlet-name>
        <url-pattern>/auction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auctionAdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>auction</welcome-file>
    </welcome-file-list>
</web-app>
